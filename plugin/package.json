{
  "name": "@xeaser/opencode-obsidian-sync",
  "version": "0.1.3",
  "description": "Sync OpenCode AI sessions to Obsidian as structured Markdown notes with auto-tagging and Dataview dashboards",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target bun --external @opencode-ai/plugin --external @opencode-ai/sdk --minify",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "prepack": "cp ../README.md README.md",
    "prepublishOnly": "bun run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xeaser/opencode-obsidian-sync.git",
    "directory": "plugin"
  },
  "homepage": "https://github.com/xeaser/opencode-obsidian-sync#readme",
  "bugs": {
    "url": "https://github.com/xeaser/opencode-obsidian-sync/issues"
  },
  "keywords": [
    "opencode",
    "obsidian",
    "sync",
    "ai-sessions",
    "markdown",
    "dataview"
  ],
  "license": "MIT",
  "author": "xeaser",
  "devDependencies": {
    "@opencode-obsidian-sync/lib": "workspace:*",
    "@opencode-ai/sdk": "*",
    "@types/node": "*",
    "typescript": "*",
    "zod": "^4.3.6"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  }
}
